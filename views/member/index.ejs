<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script>
      $(document).ready(function () {
        $("#changePasswordBtn").on("click", function () {
          $("#changePasswordModal").removeClass("hidden");
        });

        $("#cancelBtn").on("click", function () {
          $("#changePasswordModal").addClass("hidden");
        });
        $("#cancelIcon").on("click", function () {
          $("#changePasswordModal").addClass("hidden");
        });
        $("#confirmBtn").on("click", function () {
          $("#changePasswordModal").addClass("hidden");
        });
      });
    </script>
  </head>

  <body>
    <div class="mx-20 flex flex-col gap-4">
      <h2 class="text-4xl font-black py-4">User Profile</h2>
      <div class="flex gap-3">
        <label class="block text-gray-700 font-bold mb-2">Name:</label>
        <p class="text-gray-900 font-medium"><%= user.name %></p>
      </div>
      <div class="flex gap-3">
        <label class="block text-gray-700 font-bold mb-2">Membername:</label>
        <p class="text-gray-900 font-medium"><%= user.membername %></p>
      </div>
      <div class="flex gap-3">
        <label class="block text-gray-700 font-bold mb-2">Year of Birth:</label>
        <p class="text-gray-900 font-medium"><%= user.YOB %></p>
      </div>
      <div class="flex gap-3">
        <label class="block text-gray-700 font-bold mb-2">Role:</label>
        <p class="text-gray-900 font-medium">
          <%= user.isAdmin ? "Admin" :"Member" %>
        </p>
      </div>
      <div class="flex gap-4">
        <a
          href="/logout"
          class="py-2 px-4 border-gray-500 border-2 font-semibold rounded hover:bg-gray-200"
          >Logout</a
        >
        <a
          href="/member/update/<%= user._id.toString() %> "
          class="py-2 px-4 bg-gray-800 text-white font-semibold rounded hover:bg-gray-700"
          >Update</a
        >
        <button
          id="changePasswordBtn"
          class="py-2 px-4 bg-gray-800 text-white font-semibold rounded hover:bg-gray-700"
        >
          Change password
        </button>
      </div>
    </div>
    <div
      id="changePasswordModal"
      class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50 hidden"
    >
      <div class="bg-white p-6 rounded shadow-md w-80 relative">
        <button
          id="cancelIcon"
          class="absolute top-2 right-2 text-gray-500 hover:text-gray-800"
        >
          <i class="fas fa-times"></i>
        </button>
        <h2 class="text-xl font-bold mb-4">Confirm Old Password</h2>
        <form
          action="/member/confirm-pass/<%= user._id.toString() %>"
          method="POST"
        >
          <input
            type="password"
            id="oldPassword"
            class="border w-full p-2 mb-4 text-lg"
            placeholder="Enter old password"
            name="password"
          />
          <div class="flex justify-end">
            <button id="cancelBtn" class="px-4 py-2 bg-gray-300 rounded mr-2">
              Cancel
            </button>

            <button
              type="submit"
              id="confirmBtn"
              class="px-4 py-2 bg-black text-white rounded"
            >
              Confirm
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
